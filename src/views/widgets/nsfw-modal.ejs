<style>
  NSFW {
    display: none;
  }
</style>
<script>
  const Widgets_NSFWModal = {
    element: document.querySelectorAll('nsfw'),
    message: 'I am 18+ years old or older',
    init() {
      Widgets_NSFWModal.element.forEach((element) => {
        const warningBox = document.createElement('div');
        warningBox.setAttribute('id', 'nsfw-modal')
        const warningText = document.createElement('div');
        warningText.textContent = Widgets_NSFWModal.message;
        warningText.style.fontFamily = 'Arial, sans-serif';
        warningBox.appendChild(warningText);
        const createButton = (text, answer) => {
          const button = document.createElement('button');
          button.textContent = text;
          button.onclick = () => {
          (element.style.display = answer ? 'block' : 'none');
          if(answer) warningBox.style.display = 'none'
          }
          warningBox.appendChild(button);
        };
        const YES = createButton('YES', true);
        const NO = createButton('NO', false);
        // display warning box
        element.insertAdjacentElement('beforebegin', warningBox);
        // hide nsfw content
        element.style.display = 'none';
      });
    }
  }

  window.addEventListener('load', function() {
    Widgets_NSFWModal.init()
  })
</script>