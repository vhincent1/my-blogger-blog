<%- include('partials/header', { title : post.title}) %>
<h1><%= post.title %></h1>
<div id="rss-feed-container">
  <!-- RSS feed items will be dynamically inserted here -->
</div>
<div class="feed-item"><%- post.content %></div>
<div class="feed-info">
  <p>Labels: <%let labels = '';
    post.labels.forEach((item, index) => { 
    labels += '\<a href='+common.links.searchLabel(item)+'>'+item+'\</a>'; 
    if (index < post.labels.length - 1) { labels += ', '; }
  }); %> <%-labels%></p>
  <p>Published: <%= new Date(post.date.published).toLocaleDateString() %> <%= new Date(post.date.published).toTimeString() %></p>
  <p>Updated: <%= new Date(post.date.updated).toLocaleDateString() %> <%= new Date(post.date.updated).toTimeString() %></p>
  <p>Text: <%= post.size.content.count %>(<%= post.size.content.format %>) Images: <%=post.size.images.count%>(<%= post.size.images.format %>)</p>
  <%if(post.source) {%>
  <p>Original URL: <a href="<%=post.source%>"><%=post.source%></a></p>
  <%}%>
</div>
